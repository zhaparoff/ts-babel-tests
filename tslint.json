{
    "defaultSeverity": "warning",
    "extends": [
        "tslint:recommended"
    ],
    "jsRules": {},
    "rules": {
        "one-line": [
            true,
            "check-open-brace",
            "check-whitespace"
        ],
        "arrow-parens": [
            true,
            "ban-single-arg-parens"
        ],
        "trailing-comma": [
            true,
            {
                "multiline": {
                    "arrays": "never",
                    "exports": "never",
                    "functions": "never",
                    "imports": "never",
                    "objects": "never",
                    "typeLiterals": "never"
                },
                "singleline": {
                    "arrays": "never",
                    "exports": "never",
                    "functions": "never",
                    "imports": "never",
                    "objects": "never",
                    "typeLiterals": "never"
                },
                "esSpecCompliant": true
            }
        ],
        "max-line-length": [
            true,
            200
        ],
        "no-namespace": [
            true,
            "allow-declarations"
        ],
        "no-console": false
    },
    "rulesDirectory": [],
    "linterOptions": {
        "exclude": [
            "node_modules",
            "dist",
            "src/typings"
        ]
    }
}